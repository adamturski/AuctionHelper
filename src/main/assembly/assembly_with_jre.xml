<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>jre</id>
    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/jfx/app</directory>
            <outputDirectory>/app</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/include</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>setting.xml</include>
                <include>firewallFix.bat</include>
                <include>AuctionHelper.bat</include>
                <include>java.ico</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/include/resource</directory>
            <outputDirectory>/app/resource</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/include/jre</directory>
            <outputDirectory>/jre</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/include/www</directory>
            <outputDirectory>/www</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>