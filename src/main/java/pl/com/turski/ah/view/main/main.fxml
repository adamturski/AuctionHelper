<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="view" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.com.turski.ah.view.main.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Plik">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#menuSettingAction" text="Ustawienia" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#menuCloseAction" text="Zakończ" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Pomoc">
          <items>
            <MenuItem fx:id="menuAbout" mnemonicParsing="false" onAction="#menuAboutAction" text="O programie" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="640.0" style="-fx-padding: 10px; -fx-background-color: #efefef;" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="stepTitle" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <GridPane fx:id="contentGrid" VBox.vgrow="ALWAYS">
        <columnConstraints>
          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
        </rowConstraints>
      </GridPane>
      <Separator prefWidth="200.0" />
      <HBox fx:id="stepsHBox" alignment="CENTER_RIGHT" prefHeight="61.0" prefWidth="640.0" style="-fx-spacing: 10px; -fx-padding: 10px; -fx-background-color: #efefef;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="previousButton" mnemonicParsing="false" onAction="#previousButtonAction" text="Wstecz" visible="false" />
            <Button fx:id="nextButton" defaultButton="true" mnemonicParsing="false" onAction="#nextButtonAction" text="Dalej" />
            <Button fx:id="finishButton" defaultButton="true" mnemonicParsing="false" onAction="#finishButtonAction" text="Zakończ" visible="false" />
         </children>
      </HBox>
  </children>
</VBox>
