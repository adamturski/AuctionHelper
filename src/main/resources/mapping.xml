<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping>
    <class name="pl.com.turski.ah.model.setting.Setting">
        <map-to xml="setting"/>

        <field name="ftpSetting" type="pl.com.turski.ah.model.setting.FtpSetting">
            <bind-xml name="ftpSetting" node="element"/>
        </field>
        <field name="gallerySetting" type="pl.com.turski.ah.model.setting.GallerySetting">
            <bind-xml name="gallerySetting" node="element"/>
        </field>
    </class>
    <class name="pl.com.turski.ah.model.setting.FtpSetting">
        <map-to xml="ftpSetting"/>
        <field name="hostname" type="string">
            <bind-xml name="hostname" node="element"/>
        </field>
        <field name="port" type="integer">
            <bind-xml name="port" node="element"/>
        </field>
        <field name="login" type="string">
            <bind-xml name="login" node="element"/>
        </field>
        <field name="password" type="string">
            <bind-xml name="password" node="element"/>
        </field>
        <field name="workingDirectory" type="string">
            <bind-xml name="workingDirectory" node="element"/>
        </field>
    </class>
    <class name="pl.com.turski.ah.model.setting.GallerySetting">
        <map-to xml="gallerySetting"/>
        <field name="imageWidth" type="integer">
            <bind-xml name="imageWidth" node="element"/>
        </field>
        <field name="thumbnailWidth" type="integer">
            <bind-xml name="thumbnailWidth" node="element"/>
        </field>
    </class>

</mapping>