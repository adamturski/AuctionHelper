<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping>
    <class name="pl.com.turski.ah.model.Preference">

        <map-to xml="preference"/>

        <field name="ftpServer" type="string">
            <bind-xml name="ftpServer" node="element"/>
        </field>
        <field name="ftpPort" type="integer">
            <bind-xml name="ftpPort" node="element"/>
        </field>
        <field name="ftpLogin" type="string">
            <bind-xml name="ftpLogin" node="element"/>
        </field>
        <field name="ftpPassword" type="string">
            <bind-xml name="ftpPassword" node="element"/>
        </field>
        <field name="ftpPath" type="string">
            <bind-xml name="ftpPath" node="element"/>
        </field>
    </class>

</mapping>